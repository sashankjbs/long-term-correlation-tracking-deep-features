function [scale_pyr,scale] = scalePyramid(target_size,N,im,pos,cell_size,scale_window)

global A_scale;
count = 1;

P = target_size(1,1);
Q = target_size(1,2);
if prod(target_size) > 512
    scaleModelFactor = sqrt(512/prod(target_size));
    P = scaleModelFactor*P;
end

xt = pos(1,1);
yt = pos(1,2);

for i = 1:N
    
    n = ceil(N/2)-i;
    
    %scale
    s = A_scale^n;
    
    % extract patch
    [patch] = getPatch(im,[xt yt],[floor(s*P) floor(s*Q)]);
    
    % resize patch to P,Q
    re_patch = imresize(patch,[P Q]);
    
    % Compute HOG features
    [H] = computeFeatures(re_patch,cell_size,[]);
 
    % Creating target scale pyramid
    scale_pyr(:,i) = H(:)*scale_window(i);
    scale{count} = s;
    count = count + 1;
    
end




end